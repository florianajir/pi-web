# --- Personal Configuration ---
HOST_NAME=
TIMEZONE=
EMAIL=
USER=
PASSWORD=

# --- Network Configuration ---
HOST_LAN_IP=
HOST_LAN_PARENT=eth0
HOST_LAN_SUBNET=192.168.1.0/24
HOST_LAN_GATEWAY=192.168.1.1
# Pi-hole macvlan IP (appears as separate device on LAN; used for DHCP/DNS service)
PIHOLE_IP=192.168.1.29
# DNS endpoint advertised to Tailscale clients (Pi host Tailscale IP forwarding to Pi-hole)
TAILSCALE_DNS_IP=100.64.0.1
# Allow access to services from these IP ranges (comma-separated CIDR)
ALLOW_IP_RANGES="127.0.0.1/32,192.168.1.0/24,100.64.0.0/10"

# --- Traefik ---
# Cloudflare API token with DNS edit permissions for your zone.
CLOUDFLARE_DNS_API_TOKEN=
# Cloudflare Zone ID for your domain (find in Cloudflare dashboard)
CLOUDFLARE_ZONE_ID=

# --- Database Configuration (PostgreSQL for Immich & Nextcloud) ---
# PostgreSQL root credentials (used to create separate databases/users)
DB_PASSWORD=
DB_USERNAME=postgres
DB_DATABASE_NAME=postgres
DB_DATA_LOCATION=./data/postgres

# --- Immich Configuration ---
IMMICH_DB_NAME=immich
IMMICH_DB_USER=immich
IMMICH_DB_PASSWORD=
# Storage location for Immich media files
IMMICH_UPLOAD_LOCATION=./data/immich

# Nextcloud Configuration ---
NEXTCLOUD_DB_NAME=nextcloud
NEXTCLOUD_DB_USER=nextcloud
NEXTCLOUD_DB_PASSWORD=nextcloud-secure-password
NEXTCLOUD_TRUSTED_PROXIES=172.30.11.0/24

# --- Netdata Configuration (optional cloud connection) ---
# Claim token for Netdata Cloud (leave empty for local-only monitoring)
NETDATA_CLAIM_TOKEN=
# Netdata Cloud URL
NETDATA_CLAIM_URL=
# Comma-separated room IDs for cloud organization
NETDATA_CLAIM_ROOMS=

